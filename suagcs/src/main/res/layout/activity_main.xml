<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/recycler_background"
                android:scrollbars="vertical" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/basicModeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_view"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/flightModeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton_takeoff_altitude"
            android:text="일반모드" />

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:id="@+id/flightModeState"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Button
                android:id="@+id/FlyMode_Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CCCC99"
                android:text="일반모드" />


            <Button
                android:id="@+id/FlyMode_Path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CCCC99"
                android:text="Path모드" />

            <Button
                android:id="@+id/FlyMode_Gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CCCC99"
                android:text="Gap모드" />

            <Button
                android:id="@+id/FlyMode_Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CCCC99"
                android:text="Area모드" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/altitudeBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basicModeButtons"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">

        <Button
            android:id="@+id/takeOffAltitudeBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="#CCCC99"
            android:text="이륙고도" />

        <LinearLayout
            android:id="@+id/altitudeState"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <Button
                android:id="@+id/altitudeDown"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#CCCC99"
                android:text="Down" />

            <Button
                android:id="@+id/altitudeUp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#CCCC99"
                android:text="Up" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:text="ARM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="264dp"
        android:text="맵 잡금"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/map" />

    <Button
        android:id="@+id/mapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="176dp"
        android:text="지도타입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/map" />

    <Button
        android:id="@+id/cadastralOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="지적도On"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        android:id = "@+id/mapTypeLayout">

        <Button
            android:id="@+id/basicMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반지도" />

        <Button
            android:id="@+id/topoMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지형도" />

        <Button
            android:id="@+id/satelliteMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="위성지도"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </TableLayout>

    <LinearLayout
        android:id="@+id/info_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전압 : "
            android:textSize="17dp" />

        <TextView
            android:id="@+id/voltageValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0v"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/flyMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="비행모드 : "
            android:textSize="17dp" />


        <Spinner
            android:id="@+id/modeSelect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_toLeftOf="@+id/flyMode"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="속도 : "
            android:textSize="17dp" />

        <TextView
            android:id="@+id/speedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0m/s"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="고도 : "
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/altitudeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0m"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/yaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="YAW : "
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/yawValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/satellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="위성 : "
            android:textSize="17dp" />


        <TextView
            android:id="@+id/satelliteValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textAlignment="center"
            android:textSize="17dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>